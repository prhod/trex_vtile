{
    "version": 8,
    "name": "Basic",
    "sources": {
        "lines": {
            "type": "vector",
            "tiles": [
                "http://localhost:6767/lines/{z}/{x}/{y}.pbf"
            ]
        }
    },
    "layers": [
        {
            "id": "captain_train",
            "source": "lines",
            "source-layer": "lines",
            "type": "line",
            "filter": ["in", "mode", "train", "railway", "rail"],
            "paint": {
                "line-color": {
                    "type": "identity",
                    "property": "colour"
                },
                "line-width": {
                    "property": "mode",
                    "default": 5,
                    "type": "categorical",
                    "stops": [
                        ["train", 5],
                        ["rail", 5],
                        ["railway", 5]
                    ]
                }
            }
        },
        {
            "id": "other_lines",
            "source": "lines",
            "source-layer": "lines",
            "type": "line",
            "minzoom": 10,
            "maxzoom": 22,
            "filter": ["!in", "mode", "bicycle", "train", "railway", "rail"],
            "paint": {
                "line-color": {
                    "type": "identity",
                    "property": "colour"
                },
                "line-width": {
                    "property": "mode",
                    "default": 20,
                    "type": "categorical",
                    "stops": [
                        ["bus", 2],
                        ["coach", 2],
                        ["subway", 5],
                        ["trolleybus", 3],
                        ["ferry", 5],
                        ["light_rail", 4],
                        ["funicular", 4],
                        ["aerialway", 4],
                        ["share_taxi", 2],
                        ["tram", 3]
                    ]
                }
            }
        },
        {
            "id": "bus_nom",
            "type": "symbol",
            "source": "lines",
            "source-layer": "lines",
            "filter": [
                "in",
                "mode",
                "bus"
            ],
           "paint": {
                "text-color": "#ffffff",
                "text-halo-color": {
                    "property": "colour",
                    "type": "identity"
                },
                "text-halo-width": 15.7,
                "text-halo-blur": 6
            },
            "layout": {
                "text-field": "{code}",
                "symbol-placement": "line",
                "text-padding": 11,
                "icon-rotation-alignment": "map",
                "text-font": [
                    "Open Sans Regular"
                ],
                "text-allow-overlap": false,
                "text-anchor": "center",
                "text-size": {
                    "base": 1,
                    "stops": [
                        [
                            13,
                            12
                        ],
                        [
                            19,
                            14
                        ]
                    ]
                },
                "symbol-spacing": {
                    "base": 1,
                    "stops": [
                        [
                            13,
                            190
                        ],
                        [
                            19,
                            215
                        ]
                    ]
                }
            },
            "minzoom": 13
        }
    ]
}

{
    "version": 8,
    "name": "Basic",
    "sources": {
        "raster-tiles": {
            "type": "raster",
            "tiles": [
                "http://a.tiles.wmflabs.org/bw-mapnik/{z}/{x}/{y}.png"
            ]
        },
        "transport": {
            "type": "vector",
            "tiles": [
                "http://localhost:6767/osm_routes/{z}/{x}/{y}.pbf"
            ]
        }
    },
    "layers": [{
            "id": "fond",
            "type": "background",
            "paint": {
                "background-color": "#ffffff"
            }
        },
        {
            "id": "simple-tiles",
            "type": "raster",
            "source": "raster-tiles",
            "minzoom": 0,
            "maxzoom": 22
        }
    ]
}
